<section id='product_models'>
  <h2>Modelos de produto</h2>
  <div>
    <%= link_to 'Cadastrar modelo', new_product_model_path %>
  </div>

  <% if @product_models.empty? %>
    <p>Não existem modelos cadastrados.</p>
  <% else %>
    <% @product_models.each do |product_model| %>
      <div>
        <p><strong><%= link_to product_model.name, product_model %></strong></p>
        <dl>
          <dt>Código:</dt>
          <dd><%= product_model.code %></dd>
          <dt>Fornecedor:</dt>
          <dd><%= product_model.supplier.brand_name %></dd>
        </dl>
      </div>
    <% end %>
  <% end %>
</section>

<div>
  <p><%= link_to 'Voltar', root_path %></p>
</div>
